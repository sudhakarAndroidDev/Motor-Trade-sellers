                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="$40"
                                    android:textColor=" #1763EA"
                                    android:textSize="18dp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
