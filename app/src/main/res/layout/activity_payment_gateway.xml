<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEAEA"
    >

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressBar"
        style="@style/SpinKitView.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true"
        android:indeterminate="true"
        android:elevation="8dp"
        android:visibility="gone"
        app:SpinKit_Color="@color/blue" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1763EA"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/white">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Make a Payment"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_regular"
                android:textSize="20dp">

            </TextView>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:gravity="end"-->
            <!--                android:orientation="horizontal">-->

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:text="Skip now"-->
            <!--                    android:textColor="@color/white"-->
            <!--                    android:textSize="16dp">-->

            <!--                </TextView>-->

            <!--            </LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Choose your comfort plan for the best usage"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_regular"
                android:textSize="13dp">

            </TextView>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:gravity="end"-->
            <!--                android:orientation="horizontal">-->

            <!--                <ImageView-->
            <!--                    android:layout_width="18dp"-->
            <!--                    android:layout_height="18dp"-->
            <!--                    android:layout_marginEnd="20dp"-->
            <!--                    android:src="@drawable/vector50" />-->

            <!--            </LinearLayout>-->


        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear1"
            android:paddingBottom="400dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1763EA" />

            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/currentbackground"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/mulish_regular"
                        android:layout_marginTop="10dp"
                        android:text="Selected Plan and Amount Payable"
                        android:textColor="#414346"
                        android:textSize="14dp">

                    </TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"

                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/vector51"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/plan_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="Basic"
                                    android:textColor="#232120"
                                    android:textSize="16dp"
                                    android:textStyle="bold">

                                </TextView>


                                <ImageView
                                    android:id="@+id/plan_check"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/v_8" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/plan_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="$10"
                                    android:textColor=" #1763EA"
                                    android:textSize="18dp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
                                    android:id="@+id/plan_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="/ month"
                                    android:textColor=" #808080"
                                    android:textSize="14dp">

                                </TextView>

                            </LinearLayout>


                        </LinearLayout>

                        <!--                        <LinearLayout-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_gravity="center"-->
                        <!--                            android:gravity="end">-->

                        <!--                            <ImageView-->
                        <!--                                android:layout_width="15dp"-->
                        <!--                                android:layout_height="15dp"-->
                        <!--                                android:src="@drawable/vector53" />-->

                        <!--                        </LinearLayout>-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/change_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="Change Plan"
                        android:textColor="#00B99F"
                        android:fontFamily="@font/mulish_regular"
                        android:textSize="14dp"
                        android:textStyle="bold">

                    </TextView>


                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/one"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mulish_regular"
                    android:text="Other Payment Options"
                    android:textColor="#202123"
                    android:textSize="13dp"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/currentbackground"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/mulish_regular"
                            android:text="Credit / Debit / ATM Card"
                            android:textColor="#202123"
                            android:textSize="16dp">

                        </TextView>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#D0D1D3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="Card Number"
                        android:textColor="#444A4F"
                        android:textSize="13dp" />


                    <!--                    <RelativeLayout-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content">-->

                    <EditText
                        android:id="@+id/card_number"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#E7E7E7"
                        android:fontFamily="@font/mulish_regular"
                        android:inputType="number"
                        android:maxLength="16"
                        android:paddingStart="30dp"
                        android:textSize="13dp">

                    </EditText>


                    <!--                        <LinearLayout-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_marginEnd="25dp"-->
                    <!--                            android:gravity="end">-->

                    <!--                            <ImageView-->
                    <!--                                android:layout_width="30dp"-->
                    <!--                                android:layout_height="30dp"-->
                    <!--                                android:layout_marginTop="15dp" />-->

                    <!--                        </LinearLayout>-->


                    <!--                    </RelativeLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/mulish_regular"
                            android:text="Exp.Date"
                            android:textColor="#444A4F"
                            android:textSize="13dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/mulish_regular"
                            android:text="CVV"
                            android:textColor="#444A4F"
                            android:textSize="13dp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/card_month"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="#E7E7E7"
                                android:fontFamily="@font/mulish_regular"
                                android:hint="MM"
                                android:inputType="number"
                                android:maxLength="2"
                                android:paddingStart="30dp"
                                android:textSize="13dp">

                            </EditText>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish_regular"
                                android:text="/" />

                            <EditText
                                android:id="@+id/card_year"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="#E7E7E7"
                                android:fontFamily="@font/mulish_regular"
                                android:hint="YY"
                                android:inputType="number"
                                android:maxLength="2"
                                android:paddingStart="30dp"
                                android:textSize="13dp">

                            </EditText>
                        </LinearLayout>


                        <EditText
                            android:id="@+id/card_cvv"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="#E7E7E7"
                            android:fontFamily="@font/mulish_regular"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingStart="30dp"
                            android:textSize="13dp">

                        </EditText>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="Card Holder Name"
                        android:textColor="#444A4F"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/card_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#E7E7E7"
                        android:fontFamily="@font/mulish_regular"
                        android:maxLength="30"
                        android:paddingStart="30dp"
                        android:textSize="13dp">

                    </EditText>

                    <TextView
                        android:id="@+id/error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/mulish_regular"
                        android:paddingEnd="5dp"
                        android:text="Error"
                        android:textAlignment="textEnd"
                        android:textColor="#E53935"
                        android:textSize="15dp"
                        android:visibility="gone"

                        />
                </LinearLayout>


            </RelativeLayout>

            <Button
                android:id="@+id/payButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/two"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg3"
                android:fontFamily="@font/mulish_regular"
                android:text="Proceed payment"
                android:textColor="@color/white" />

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>