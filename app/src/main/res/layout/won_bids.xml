<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="8dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/currentbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/rounded_corner"
                    />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AD ID - 123456789"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/mulish_regular"
                    android:layout_marginTop="5dp"
                    android:textColor="#60000000"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMW 7 Series (2005)"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/mulish_regular"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="73OLD Seden"
                    android:fontFamily="@font/mulish_regular"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/v_23"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buyer Name"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/buyer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kane williamson"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/mulish_regular"
                android:textColor="@color/blue"
                />

<!--            <ImageView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/vector30"-->
<!--                />-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/v_9"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bids Price"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/bid_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$46,000"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginStart="10dp"
                android:textColor="@color/blue"
                />
        </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:layout_marginEnd="15dp"
                >

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/v_10"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:drawablePadding="15dp"
                android:textColor="#00B99F"
                android:visibility="gone"
                android:fontFamily="@font/mulish_regular"
                />



            <TextView
                android:id="@+id/view_car_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Car Detail >"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/mulish_regular"
                android:textColor="@color/black"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
