<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="8dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/currentbackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/featured"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Featured"
                        android:fontFamily="@font/mulish_regular"
                        android:textColor="#00B99F" />

                    <TextView
                        android:id="@+id/tv13"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/featured"
                        android:background="@color/white"
                        android:fontFamily="@font/mulish_regular"
                        android:text="12 feb 20021" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv13"

                        android:elevation="70dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audi - 2020 (Very Good Conditions)"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/mulish_regular"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/tv15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 45,000"
                    android:textColor="#1763EA"
                    android:fontFamily="@font/mulish_regular"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:fontFamily="@font/mulish_regular"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available"
                android:layout_marginStart="10dp"
                android:textColor="#90D93C"
                android:fontFamily="@font/mulish_regular"
                />


        </LinearLayout>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recyclerview5"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_marginEnd="50dp"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:numColumns="3"-->
<!--            />-->

    </LinearLayout>
</LinearLayout>